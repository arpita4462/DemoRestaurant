<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/margin_medium"
                  android:weightSum="5">
        <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_cartlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                fresco:placeholderImage="@color/stay_color"/>
        <LinearLayout  android:id="@+id/layout_item_desc"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_weight="2"
                       android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Fried Rice"
                      android:textSize="@dimen/text_size_xmedium"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Rs. 8,999"
                      android:textSize="@dimen/text_size_xmedium"
                      android:textColor="#4CAF50"
                      android:layout_marginTop="@dimen/margin_small"/>


            <!--<View android:layout_width="match_parent"-->
                  <!--android:layout_height="@dimen/view_width_small"-->
                  <!--android:background="@color/grey_light"-->
                  <!--android:layout_marginTop="8dp"-->
                  <!--android:layout_marginBottom="8dp"/>-->
        </LinearLayout>
    <LinearLayout android:id="@+id/layout_action2"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:weightSum="3">
        <!--<ImageView android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@drawable/ic_minus"/>-->

        <TextView android:id="@+id/text_minus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="-"
                  android:textSize="12dp"
                  android:padding="5dp"
                  android:background="@drawable/rounded_shape"
                  android:textColor="@color/white"
                  android:gravity="center"/>
        <TextView android:id="@+id/text_quantity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="5dp"
                  android:text="1"
                  android:textSize="12dp"
                  android:textColor="@color/gen_black"
                  android:gravity="center"/>
        <TextView android:id="@+id/text_plus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:layout_weight="1"
                  android:text="+"
                  android:textSize="12dp"
                  android:background="@drawable/rounded_shape"
                  android:textColor="@color/white"
                  android:gravity="center"/>
        <!--<ImageView android:layout_width="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_plus"/>-->
    </LinearLayout>

    <ImageView
            android:id="@+id/layout_action1"
            android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_clear_black_18dp"/>
</LinearLayout>

